#include <ch.h>
#include <hal.h>
#include "stdutil.h"
#include "ttyConsole.h"
#include "hal_stm32_dma.h"
#include "benchTime.h"
#include <string.h>

/*
  designed to run on a NUCLEO-F767ZI board
 */

/*
